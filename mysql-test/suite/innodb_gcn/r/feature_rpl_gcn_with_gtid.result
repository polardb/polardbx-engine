create table tt (id int);
###############################
# sync master's sys_gcn with slave's
###############################
[connection master]
SET @base_seq = (SELECT CAST(variable_value AS UNSIGNED) FROM performance_schema.global_status WHERE variable_name = 'Lizard_current_gcn');
