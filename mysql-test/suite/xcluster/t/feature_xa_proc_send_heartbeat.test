--echo ###############################
--echo # case 4
--echo ###############################
set global innodb_cn_no_heartbeat_freeze_timeout = 1;
call dbms_xa.send_heartbeat();

--echo # trigger purge to advance and set freeze.
sleep 2;
update t1 set id = id + 1;
set session debug = "-d, hb_timeout_do_not_freeze_operation";

--echo # Be not able to execute the following statement
sleep 2;
--error ER_XA_PROC_HEARTBEAT_FREEZE
update t1 set id = id + 1;

--echo # Be able to execute the following statement
call dbms_xa.send_heartbeat();
update t1 set id = id + 1;

--echo ###############################
--echo # case 5
--echo ###############################
--connection conn2
set global innodb_cn_no_heartbeat_freeze = on;

--connection conn1
set global innodb_cn_no_heartbeat_freeze = 0;
--echo # trigger slave's purge to advance and set freeze.
sleep 2;
update t1 set id = id + 1;

sleep 2;
insert into t1 values (1000);

--connection conn2
sleep 1;
select count(*) from t1 where id = 1000;

set global innodb_cn_no_heartbeat_freeze_timeout = 1000;
call dbms_xa.send_heartbeat();
sleep 1;
select * from t1;

--echo ###############################
--echo # cleanup
--echo ###############################
--connection conn1
set global innodb_scn_history_task_enabled = default;
set global innodb_scn_history_interval = default;
set global innodb_cn_no_heartbeat_freeze_timeout = default;
set global innodb_cn_no_heartbeat_freeze = default;
--disconnect conn1

--connection conn2
--disconnect conn2

--connection default
drop table t1;
set session debug = "-d, hb_timeout_do_not_freeze_operation";

