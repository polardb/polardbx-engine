--connection conn1
set global innodb_cn_no_heartbeat_freeze = on;
sleep 2;
--let $timestamp = `select now()`
sleep 1;
update t1 set id = id + 1;
sleep 2;
select * from t1;
--disable_query_log
--eval select * from t1 as of timestamp "$timestamp"
--enable_query_log

# Heartbeat have not timeout, so the purge will not be blocked.
# --connection conn2
# set global innodb_cn_no_heartbeat_freeze_timeout = 3;
--connection conn1
set global innodb_cn_no_heartbeat_freeze_timeout = 3;
call dbms_xa.send_heartbeat();
sleep 2;
--disable_query_log
--error ER_SNAPSHOT_TOO_OLD
--eval select * from t1 as of timestamp "$timestamp"
--enable_query_log

