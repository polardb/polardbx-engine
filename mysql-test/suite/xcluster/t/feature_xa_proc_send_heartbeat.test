# Heartbeat timeout, so the purge sys will be blocked.
--connection conn1
sleep 1;
sleep 2;
--let $timestamp = `select now()`
sleep 1;
update t1 set id = id + 1;
sleep 2;
select * from t1;
--disable_query_log
--eval select * from t1 as of timestamp "$timestamp"
--enable_query_log

